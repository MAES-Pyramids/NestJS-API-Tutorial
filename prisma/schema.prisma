generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  first_name   String
  last_name    String?
  email        String @unique
  hashedPass   String   

  bookmarks Bookmark[]
  @@map("users")
}

model Bookmark {
  id           Int       @id @default(autoincrement())
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  link        String    
  title       String    
  description  String?

  userId Int
  user User @relation(fields: [userId],references: [id])

  @@map("bookmakrs")
}
